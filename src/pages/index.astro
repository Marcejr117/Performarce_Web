              class="h-full object-cover bg-no-repeat"
              style="background-image: url(/assets/H150-0226.jpg)"
            >
              <div class="h-full bg-black opacity-50"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- marcas -->

      <div class="flex flex-col items-center">
        <!-- Texto Marcas -->
        <div
          class="relative flex w-full justify-center items-center bg-[url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Feskipaper.com%2Fimages%2Fgrass-pictures-1.jpg&f=1&nofb=1&ipt=36b716f826ddc78102f8763a19f1c870f2882c35ee7e0478e4523c983b5debb8&ipo=images')] bg-fixed bg-no-repeat"
        >
