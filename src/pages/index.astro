        </div>
        <!--  -->

        <!-- logos forestal -->
        <div
          class="relative self-start w-full bg-[url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Feskipaper.com%2Fimages%2Fgrass-pictures-1.jpg&f=1&nofb=1&ipt=36b716f826ddc78102f8763a19f1c870f2882c35ee7e0478e4523c983b5debb8&ipo=images')] bg-fixed bg-no-repeat"
        >
          <!-- oscurecer/gradiante -->
          <div
            class="absolute w-full h-full bg-gradient-to-b from-Custom_Black/50 from-10% to-gray-900 to-95%%"
          >
          </div>

          <p class="relative ml-10 my-5 text-white font-bold text-3xl">
            Forestal
          </p>
          <!-- carrusel forestal -->
          <div
            class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]"
          >
            <ul
              class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
