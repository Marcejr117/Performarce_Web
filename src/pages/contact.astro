---
import Layout from "../layouts/Layout.astro";
---

<head>
    <script></script>
</head>

<Layout>
    <section class="flex flex-col justify-center items-center">
        <div class="flex flex-col justify-center items-start gap-4">
            <h1 class="dark:text-gray-200 font-bold mt-10 text-4xl">
                Escribenos !
            </h1>
            <p class="dark:text-gray-300 text-sm font-semibold">
                Si necesitas contactar con nosotros, puedes mandarnos un E-Mail.
            </p>
            <form
                class="flex flex-col justify-center items-start gap-4 w-full *:w-full *:*:w-full"
                action="https://formsubmit.co/12b3f4882031dfd3f883650d669082ad"
                method="POST"
            >
                <fieldset>
                    <legend class="font-bold text-gray-300 text-xs mb-1"
                        >Nombre</legend
                    >
                    <input
                        class="h-10 pb-1 dark:text-gray-50 px-3 focus:outline-none rounded-lg dark:border-gray-200 border-[1px] focus:border-sky-300 focus:border-[2px] dark:bg-gray-600 opacity-50"
                        type="text"
                        placeholder="Su nombre (Opcional)"
                        name="Nombre_Cliente"
                        id="nombre"
                    />
                </fieldset>

                <fieldset>
                    <legend class="font-bold text-gray-300 text-xs mb-1"
                        >E-Mail</legend
                    >
                    <input
                        class="h-10 pb-1 dark:text-gray-50 px-3 focus:outline-none rounded-lg dark:border-gray-200 border-[1px] focus:border-sky-300 focus:border-[2px] dark:bg-gray-600 opacity-50"
                        type="text"
                        placeholder="E-Mail de contacto"
                        name="Email"
                        id="Email"
                    />
                </fieldset>

                <fieldset>
                    <legend class="font-bold text-gray-300 text-xs mb-1"
                        >Mensaje</legend
                    >
                    <textarea
                        class="h-16 pb-1 dark:text-gray-50 px-3 focus:outline-none rounded-lg dark:border-gray-200 border-[1px] focus:border-sky-300 focus:border-[2px] dark:bg-gray-600 opacity-50"
                        placeholder="Contenido de mensaje"
                        name="Mensaje"
                        id="Mensaje"></textarea>
                </fieldset>
                <button
                    class="bg-sky-700 rounded-lg h-10 transition-colors duration-0 hover:bg-sky-400 hover:duration-500"
                    type="submit">Enviar</button
                >
                <input type="hidden" name="_next" value="/contact/index.html" />
            </form>
        </div>
    </section>
</Layout>
